@robot 'chatformatic'
  local: true
  description: "Formats chat messages."

escapeHTML = (html) -> $('<div/>').text(html).html() if html?

@transmit "handling display for type", "chat"

@listen "chat", ({user, data}) ->
  @transmit type:"build message", user:user, data:{source:user or "anonymous", text:data}
