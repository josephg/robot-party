#!/usr/bin/env coffee
fs = require 'fs'

Hub = require './Hub'
hub = new Hub

hub.add ->
	process.on 'uncaughtException', (err) =>
		console.error 'uncaught exception: ' + err.stack
		try @transmit 'uncaught exception', err, {local:true}

hub.add fs.readFileSync('robots/fileLoader.bot')
hub.add fs.readFileSync('init.bot')
